<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
         xmlns:sys="clr-namespace:System;assembly=System.Runtime"
         x:Class="LeaseGateLite.App.MainPage"
         Title="Control Panel">

    <ContentPage.Resources>
    <x:Array x:Key="Modes" Type="{x:Type sys:String}">
        <sys:String>Embedded</sys:String>
        <sys:String>Daemon</sys:String>
    </x:Array>
    <x:Array x:Key="CooldownModes" Type="{x:Type sys:String}">
        <sys:String>Off</sys:String>
        <sys:String>Mild</sys:String>
        <sys:String>Aggressive</sys:String>
    </x:Array>
    <x:Array x:Key="OverflowModes" Type="{x:Type sys:String}">
        <sys:String>TrimOldest</sys:String>
        <sys:String>Deny</sys:String>
        <sys:String>QueueOnly</sys:String>
    </x:Array>
    </ContentPage.Resources>

        <Grid RowDefinitions="Auto,Auto,Auto,*"
            Padding="16"
            RowSpacing="14">

    <Border StrokeShape="RoundRectangle 14"
        Padding="14"
        BackgroundColor="{AppThemeBinding Light=#F6F8FA, Dark=#1E1E1E}">
        <Grid ColumnDefinitions="Auto,*,Auto"
          ColumnSpacing="14"
          VerticalOptions="Center">
        <HorizontalStackLayout Spacing="8"
                       VerticalOptions="Center">
            <BoxView x:Name="StatusDot"
                 WidthRequest="12"
                 HeightRequest="12"
                 CornerRadius="6"
                 Color="#B0B0B0" />
            <Label Text="LeaseGate Lite"
               FontAttributes="Bold"
                    FontSize="20" />
            <Label x:Name="ConnectionStateLabel"
               Text="Disconnected"
                    FontSize="13" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Grid.Column="1"
                       Spacing="8"
                       VerticalOptions="Center">
            <Label Text="Mode"
               VerticalOptions="Center" />
            <Picker x:Name="ModePicker"
                WidthRequest="120"
                ItemsSource="{StaticResource Modes}" />
            <Label x:Name="EndpointLabel"
               FontFamily="OpenSansSemibold"
               VerticalOptions="Center"
               LineBreakMode="TailTruncation" />
            <Border x:Name="PendingPill"
                IsVisible="False"
                Padding="8,2"
                StrokeShape="RoundRectangle 10"
                BackgroundColor="{AppThemeBinding Light=#FFF3CD, Dark=#5C4B00}">
            <Label Text="Unsaved draft"
                   FontSize="12"
                   FontAttributes="Bold" />
            </Border>
        </HorizontalStackLayout>

        <HorizontalStackLayout Grid.Column="2"
                       Spacing="8"
                       VerticalOptions="Center">
            <Button x:Name="HeaderStartButton"
                Text="Start"
                Clicked="OnStartClicked" />
            <Button x:Name="HeaderStopButton"
                Text="Stop"
                Clicked="OnStopClicked" />
            <Button x:Name="HeaderApplyButton"
                Text="Apply"
                Clicked="OnApplyClicked" />
            <Button x:Name="HeaderRevertButton"
                Text="Revert"
                Clicked="OnRevertClicked" />
            <Button Text="Export"
                Clicked="OnExportDiagnosticsClicked" />
        </HorizontalStackLayout>
        </Grid>
    </Border>

    <Grid Grid.Row="1">
        <Border x:Name="FirstRunBanner"
                IsVisible="False"
                StrokeShape="RoundRectangle 14"
                Padding="12"
                BackgroundColor="{AppThemeBinding Light=#F3F8FF, Dark=#1E2630}">
            <VerticalStackLayout Spacing="10">
                <Label Text="First-time setup: set it and forget it"
                       FontAttributes="Bold"
                       FontSize="16" />
                <Label Text="Pick a goal, choose optional comfort toggles, and finish in under 30 seconds."
                       FontSize="12" />
                  <Label x:Name="FirstRunSuggestionLabel"
                      FontSize="12"
                      FontFamily="OpenSansSemibold" />

                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                    <Border StrokeShape="RoundRectangle 10" Padding="8" BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
                        <VerticalStackLayout Spacing="6">
                            <RadioButton x:Name="FirstRunQuietRadio"
                                         GroupName="FirstRunGoal"
                                         Content="Quiet"
                                         CheckedChanged="OnFirstRunGoalChanged" />
                            <Label Text="Keeps fan noise and heat low for everyday use."
                                   FontSize="12" />
                        </VerticalStackLayout>
                    </Border>
                    <Border Grid.Column="1" StrokeShape="RoundRectangle 10" Padding="8" BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
                        <VerticalStackLayout Spacing="6">
                            <RadioButton x:Name="FirstRunBalancedRadio"
                                         GroupName="FirstRunGoal"
                                         Content="Balanced"
                                         CheckedChanged="OnFirstRunGoalChanged" />
                            <Label Text="Best default for mixed AI work and normal desktop usage."
                                   FontSize="12" />
                        </VerticalStackLayout>
                    </Border>
                    <Border Grid.Column="2" StrokeShape="RoundRectangle 10" Padding="8" BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
                        <VerticalStackLayout Spacing="6">
                            <RadioButton x:Name="FirstRunPerformanceRadio"
                                         GroupName="FirstRunGoal"
                                         Content="Performance"
                                         CheckedChanged="OnFirstRunGoalChanged" />
                            <Label Text="Pushes throughput higher when your PC has headroom."
                                   FontSize="12" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <HorizontalStackLayout Spacing="12">
                    <HorizontalStackLayout Spacing="6">
                        <Switch x:Name="FirstRunResponsiveSwitch"
                                IsToggled="True"
                                Toggled="OnFirstRunToggleChanged" />
                        <Label Text="Keep UI responsive"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="6">
                        <Switch x:Name="FirstRunStartOnLoginSwitch"
                                Toggled="OnFirstRunToggleChanged" />
                        <Label Text="Start on login"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="8">
                    <Button Text="Complete setup"
                            Clicked="OnCompleteFirstRunClicked" />
                    <Label x:Name="FirstRunStatusLabel"
                           FontSize="12"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>

        <Border x:Name="FirstRunCompleteChip"
                IsVisible="False"
                Padding="8,4"
                StrokeShape="RoundRectangle 10"
                HorizontalOptions="Start"
                BackgroundColor="{AppThemeBinding Light=#E9F7EF, Dark=#1F3A2F}">
            <Label Text="Setup complete"
                   FontSize="12"
                   FontAttributes="Bold" />
        </Border>
    </Grid>

    <Border Grid.Row="2"
            StrokeShape="RoundRectangle 10"
            Padding="8"
            BackgroundColor="{AppThemeBinding Light=#F4F5F7, Dark=#232323}">
        <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="8" VerticalOptions="Center">
            <Border x:Name="StickyPendingPill"
                    IsVisible="False"
                    Grid.Column="0"
                    Padding="8,2"
                    StrokeShape="RoundRectangle 10"
                    BackgroundColor="{AppThemeBinding Light=#FFF3CD, Dark=#5C4B00}">
                <Label Text="Pending changes"
                       FontSize="12"
                       FontAttributes="Bold" />
            </Border>
            <Label Grid.Column="1"
                   x:Name="StickyPendingStatusLabel"
                   FontSize="12"
                   VerticalOptions="Center" />
            <Button Grid.Column="2"
                    Text="Apply"
                    Clicked="OnApplyClicked" />
            <Button Grid.Column="3"
                    Text="Revert"
                    Clicked="OnRevertClicked" />
        </Grid>
    </Border>

    <Grid Grid.Row="3"
          x:Name="BodyGrid"
          ColumnDefinitions="320,*"
          ColumnSpacing="12">

        <Border StrokeShape="RoundRectangle 14"
            Padding="12"
            BackgroundColor="{AppThemeBinding Light=#F8F9FB, Dark=#1D1D1D}">
        <ScrollView>
            <VerticalStackLayout Spacing="10">
             <Label Text="Audit Checklist"
                   FontAttributes="Bold"
                   FontSize="16" />

            <Label Text="A) Service control"
                   FontAttributes="Bold"
                   FontSize="13" />
            <Button Text="Connect / Reconnect"
                CommandParameter="Service"
                Clicked="OnChecklistJumpClicked" />
            <Button Text="Start daemon"
                CommandParameter="Service"
                Clicked="OnChecklistJumpClicked" />
            <Button Text="Stop daemon"
                CommandParameter="Service"
                Clicked="OnChecklistJumpClicked" />
            <Button Text="Restart daemon"
                CommandParameter="Service"
                Clicked="OnChecklistJumpClicked" />
            <Button Text="Show version + uptime"
                CommandParameter="Service"
                Clicked="OnChecklistJumpClicked" />
            <Button Text="Open config file location"
                CommandParameter="Service"
                Clicked="OnChecklistJumpClicked" />
            <Button Text="Reset to defaults"
                CommandParameter="Service"
                Clicked="OnChecklistJumpClicked" />

            <Label Text="B) Live status"
                   FontAttributes="Bold"
                   FontSize="13" />
            <Button Text="Heat + active calls + queue + pressure"
                CommandParameter="LiveStatus"
                Clicked="OnChecklistJumpClicked" />

            <Label Text="C) Core throttling controls"
                   FontAttributes="Bold"
                   FontSize="13" />
            <Button Text="Concurrency + reserve + cap + cooldown"
                CommandParameter="Concurrency"
                Clicked="OnChecklistJumpClicked" />

            <Label Text="D) Adaptive throttle tuning"
                   FontAttributes="Bold"
                   FontSize="13" />
            <Button Text="Soft/hard/recovery/smoothing"
                CommandParameter="Adaptive"
                Clicked="OnChecklistJumpClicked" />

            <Label Text="E) Request shaping"
                   FontAttributes="Bold"
                   FontSize="13" />
            <Button Text="Token clamps + overflow + retries"
                CommandParameter="Shaping"
                Clicked="OnChecklistJumpClicked" />

            <Label Text="F) Rate limiting"
                   FontAttributes="Bold"
                   FontSize="13" />
            <Button Text="Requests/min + tokens/min + burst"
                CommandParameter="RateLimits"
                Clicked="OnChecklistJumpClicked" />

            <Label Text="G) Presets"
                   FontAttributes="Bold"
                   FontSize="13" />
                 <Button Text="Quiet/Balanced/Performance + Custom"
                CommandParameter="Presets"
                Clicked="OnChecklistJumpClicked" />

                 <Label Text="H) Per-app profiles"
                     FontAttributes="Bold"
                     FontSize="13" />
                 <Button Text="Recent apps + per-app preset/overrides"
                  CommandParameter="Profiles"
                  Clicked="OnChecklistJumpClicked" />

                 <Label Text="I) Diagnostics + audit-lite"
                   FontAttributes="Bold"
                   FontSize="13" />
            <Button Text="Export + Event Tail + Summary Copy"
                CommandParameter="Diagnostics"
                Clicked="OnChecklistJumpClicked" />
            <Button Text="Run Audit Harness"
                CommandParameter="Audit"
                Clicked="OnChecklistJumpClicked" />
            </VerticalStackLayout>
        </ScrollView>
        </Border>

        <ScrollView Grid.Column="1"
            x:Name="ControlScroll">
        <VerticalStackLayout Spacing="12">

            <Border x:Name="CardService"
                StrokeShape="RoundRectangle 14"
                Padding="12"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
            <VerticalStackLayout Spacing="8">
                <Label Text="Service"
                   FontSize="18"
                   FontAttributes="Bold" />
                     <Label Text="Manage daemon lifecycle and local connection state." />
                <HorizontalStackLayout Spacing="8">
                <Button Text="Reconnect"
                    Clicked="OnReconnectClicked" />
                <Button Text="Start"
                    Clicked="OnStartClicked" />
                <Button Text="Stop"
                    Clicked="OnStopClicked" />
                <Button Text="Restart"
                    Clicked="OnRestartClicked" />
                </HorizontalStackLayout>
                  <HorizontalStackLayout Spacing="8">
                      <Label Text="Start on login"
                          VerticalOptions="Center" />
                      <Switch x:Name="StartOnLoginSwitch"
                        Toggled="OnStartOnLoginToggled" />
                      <Label x:Name="StartOnLoginStatusLabel"
                          FontSize="12"
                          VerticalOptions="Center" />
                  </HorizontalStackLayout>
                <Label x:Name="VersionUptimeLabel"
                   FontFamily="OpenSansSemibold" />
                <HorizontalStackLayout Spacing="8">
                <Button Text="Open Config File"
                    Clicked="OnOpenConfigClicked" />
                <Button Text="Reset Defaults"
                    Clicked="OnResetDefaultsClicked" />
                </HorizontalStackLayout>
                    <Label x:Name="ConfigStatusLabel"
                       FontSize="12" />
                <Label Text="✅ Covered by: A) Service control"
                   FontSize="12" />
            </VerticalStackLayout>
            </Border>

            <Border x:Name="CardLiveStatus"
                StrokeShape="RoundRectangle 14"
                Padding="12"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
            <VerticalStackLayout Spacing="8">
                <Label Text="Live Status"
                   FontSize="18"
                   FontAttributes="Bold" />
                     <Label Text="Observe pressure, clamp mode, and effective capacity." />
                <HorizontalStackLayout Spacing="8">
                <Label Text="Heat:" />
                <Label x:Name="HeatStateLabel"
                       FontFamily="OpenSansSemibold" />
                <Label x:Name="ClampStateLabel"
                       FontSize="12" />
                </HorizontalStackLayout>
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                    <Border Padding="8" StrokeShape="RoundRectangle 8" BackgroundColor="{AppThemeBinding Light=#F7F7F7, Dark=#242424}">
                        <VerticalStackLayout Spacing="2">
                            <Label Text="Active" FontSize="11" />
                            <Label x:Name="PrimaryActiveLabel" FontSize="28" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Border>
                    <Border Grid.Column="1" Padding="8" StrokeShape="RoundRectangle 8" BackgroundColor="{AppThemeBinding Light=#F7F7F7, Dark=#242424}">
                        <VerticalStackLayout Spacing="2">
                            <Label Text="Queued" FontSize="11" />
                            <Label x:Name="PrimaryQueuedLabel" FontSize="28" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Border>
                    <Border Grid.Column="2" Padding="8" StrokeShape="RoundRectangle 8" BackgroundColor="{AppThemeBinding Light=#F7F7F7, Dark=#242424}">
                        <VerticalStackLayout Spacing="2">
                            <Label Text="Effective" FontSize="11" />
                            <Label x:Name="PrimaryEffectiveLabel" FontSize="28" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>
                <Label x:Name="LiveNumbersLabel"
                   FontFamily="OpenSansSemibold" />
                <Label x:Name="PressureLabel"
                   FontFamily="OpenSansSemibold" />
                <Label x:Name="LastReasonLabel" />
                  <HorizontalStackLayout Spacing="8">
                      <Label Text="Tray notifications"
                          VerticalOptions="Center" />
                      <Switch x:Name="NotificationsSwitch"
                        Toggled="OnNotificationsToggled" />
                      <Label x:Name="NotificationsStatusLabel"
                          FontSize="12"
                          VerticalOptions="Center" />
                  </HorizontalStackLayout>
                  <Button x:Name="WhyThrottledButton"
                       Text="Why am I throttled?"
                       Clicked="OnToggleThrottleReasonsClicked" />
                  <Label x:Name="ThrottleReasonsLabel"
                      IsVisible="False"
                      FontSize="12" />
                  <Label Text="What changed?"
                      FontAttributes="Bold" />
                  <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="6" ColumnSpacing="8">
                      <Label x:Name="Decision1Label" Grid.Row="0" Grid.Column="0" FontSize="12" />
                      <Button x:Name="Decision1Button" Grid.Row="0" Grid.Column="1" Text="Open" Clicked="OnDecisionJumpClicked" />
                      <Label x:Name="Decision2Label" Grid.Row="1" Grid.Column="0" FontSize="12" />
                      <Button x:Name="Decision2Button" Grid.Row="1" Grid.Column="1" Text="Open" Clicked="OnDecisionJumpClicked" />
                      <Label x:Name="Decision3Label" Grid.Row="2" Grid.Column="0" FontSize="12" />
                      <Button x:Name="Decision3Button" Grid.Row="2" Grid.Column="1" Text="Open" Clicked="OnDecisionJumpClicked" />
                  </Grid>
                <Label Text="✅ Covered by: B) Live status"
                   FontSize="12" />
            </VerticalStackLayout>
            </Border>

            <Border x:Name="CardConcurrency"
                StrokeShape="RoundRectangle 14"
                Padding="12"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
            <VerticalStackLayout Spacing="8">
                <Label Text="Concurrency"
                   FontSize="18"
                   FontAttributes="Bold" />
                     <Label Text="Set base concurrency and reserved capacity behavior." />
                <Label Text="Lower concurrency = steadier performance; higher concurrency = more throughput with more heat risk."
                       FontSize="12" />
                <Label x:Name="MaxConcurrencyLabel" />
                <Label Text="How many total AI calls can run in parallel under normal conditions."
                       FontSize="12" />
                <Slider x:Name="MaxConcurrencySlider"
                    Minimum="1"
                    Maximum="32"
                    ValueChanged="OnConfigChanged" />
                <Grid HeightRequest="3" ColumnDefinitions="0.1*,0.4*,0.5*">
                    <BoxView Grid.Column="1" BackgroundColor="{AppThemeBinding Light=#B8C1CC, Dark=#505A66}" Opacity="0.45" />
                </Grid>
                <Label Text="Recommended range: 4–16 for most home PCs."
                       FontSize="11" />
                <Label x:Name="InteractiveReserveLabel" />
                <Label Text="Keeps foreground interactions responsive by reserving slots."
                       FontSize="12" />
                <Slider x:Name="InteractiveReserveSlider"
                    Minimum="0"
                    Maximum="16"
                    ValueChanged="OnConfigChanged" />
                <Grid HeightRequest="3" ColumnDefinitions="0.08*,0.2*,0.72*">
                    <BoxView Grid.Column="1" BackgroundColor="{AppThemeBinding Light=#B8C1CC, Dark=#505A66}" Opacity="0.45" />
                </Grid>
                <Label x:Name="BackgroundCapLabel" />
                <Label Text="Limits background work so your active app stays smooth."
                       FontSize="12" />
                <Slider x:Name="BackgroundCapSlider"
                    Minimum="0"
                    Maximum="32"
                    ValueChanged="OnConfigChanged" />
                <Grid HeightRequest="3" ColumnDefinitions="0.1*,0.45*,0.45*">
                    <BoxView Grid.Column="1" BackgroundColor="{AppThemeBinding Light=#B8C1CC, Dark=#505A66}" Opacity="0.45" />
                </Grid>
                <HorizontalStackLayout Spacing="8">
                <Label Text="Cool-down" />
                <Picker x:Name="CooldownBehaviorPicker"
                    WidthRequest="150"
                    ItemsSource="{StaticResource CooldownModes}"
                    SelectedIndexChanged="OnConfigChanged" />
                </HorizontalStackLayout>
                <Label Text="When pressure gets high, cooldown reduces active work to recover faster."
                       FontSize="12" />
                <Label x:Name="EffectiveConcurrencyPreviewLabel"
                   FontFamily="OpenSansSemibold" />
                <Label x:Name="ConcurrencyImpactPreviewLabel"
                       FontSize="12"
                       FontFamily="OpenSansSemibold" />
                <Label Text="✅ Covered by: C) Core throttling controls"
                   FontSize="12" />
            </VerticalStackLayout>
            </Border>

            <Border x:Name="CardAdaptive"
                StrokeShape="RoundRectangle 14"
                Padding="12"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
            <VerticalStackLayout Spacing="8">
                <Label Text="Adaptive Throttle"
                   FontSize="18"
                   FontAttributes="Bold" />
                     <Label Text="Tune soft/hard clamp transitions and recovery smoothing." />
                <Label Text="Lower thresholds clamp earlier; higher thresholds favor throughput over smoothness."
                       FontSize="12" />
                <Label x:Name="SoftThresholdLabel" />
                <Label Text="Pressure point where gentle reductions begin."
                       FontSize="12" />
                <Slider x:Name="SoftThresholdSlider"
                    Minimum="40"
                    Maximum="95"
                    ValueChanged="OnConfigChanged" />
                <Grid HeightRequest="3" ColumnDefinitions="0.35*,0.35*,0.3*">
                    <BoxView Grid.Column="1" BackgroundColor="{AppThemeBinding Light=#B8C1CC, Dark=#505A66}" Opacity="0.45" />
                </Grid>
                <Label x:Name="HardThresholdLabel" />
                <Label Text="Pressure point where stronger emergency clamping starts."
                       FontSize="12" />
                <Slider x:Name="HardThresholdSlider"
                    Minimum="50"
                    Maximum="99"
                    ValueChanged="OnConfigChanged" />
                <Grid HeightRequest="3" ColumnDefinitions="0.4*,0.35*,0.25*">
                    <BoxView Grid.Column="1" BackgroundColor="{AppThemeBinding Light=#B8C1CC, Dark=#505A66}" Opacity="0.45" />
                </Grid>
                <Label x:Name="RecoveryRateLabel" />
                <Label Text="How quickly limits relax after pressure falls."
                       FontSize="12" />
                <Slider x:Name="RecoveryRateSlider"
                    Minimum="5"
                    Maximum="100"
                    ValueChanged="OnConfigChanged" />
                <Grid HeightRequest="3" ColumnDefinitions="0.15*,0.35*,0.5*">
                    <BoxView Grid.Column="1" BackgroundColor="{AppThemeBinding Light=#B8C1CC, Dark=#505A66}" Opacity="0.45" />
                </Grid>
                <Label x:Name="SmoothingLabel" />
                <Label Text="Higher smoothing means fewer abrupt clamp swings."
                       FontSize="12" />
                <Slider x:Name="SmoothingSlider"
                    Minimum="5"
                    Maximum="95"
                    ValueChanged="OnConfigChanged" />
                <Grid HeightRequest="3" ColumnDefinitions="0.2*,0.4*,0.4*">
                    <BoxView Grid.Column="1" BackgroundColor="{AppThemeBinding Light=#B8C1CC, Dark=#505A66}" Opacity="0.45" />
                </Grid>
                <Label x:Name="AdaptiveImpactPreviewLabel"
                       FontSize="12"
                       FontFamily="OpenSansSemibold" />
                <Label Text="✅ Covered by: D) Adaptive throttle tuning"
                   FontSize="12" />
            </VerticalStackLayout>
            </Border>

            <Border x:Name="CardShaping"
                StrokeShape="RoundRectangle 14"
                Padding="12"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
            <VerticalStackLayout Spacing="8">
                <Label Text="Request Shaping"
                   FontSize="18"
                   FontAttributes="Bold" />
                     <Label Text="Bound prompt/output size and define overflow and retry behavior." />
                <Label x:Name="MaxOutputTokensLabel" />
                <Slider x:Name="MaxOutputTokensSlider"
                    Minimum="64"
                    Maximum="4096"
                    ValueChanged="OnConfigChanged" />
                <Label x:Name="MaxPromptTokensLabel" />
                <Slider x:Name="MaxPromptTokensSlider"
                    Minimum="256"
                    Maximum="32000"
                    ValueChanged="OnConfigChanged" />
                <HorizontalStackLayout Spacing="8">
                <Label Text="Overflow" />
                <Picker x:Name="OverflowBehaviorPicker"
                    WidthRequest="150"
                    ItemsSource="{StaticResource OverflowModes}"
                    SelectedIndexChanged="OnConfigChanged" />
                </HorizontalStackLayout>
                <Label x:Name="MaxRetriesLabel" />
                <Slider x:Name="MaxRetriesSlider"
                    Minimum="0"
                    Maximum="8"
                    ValueChanged="OnConfigChanged" />
                <Label x:Name="RetryBackoffLabel" />
                <Slider x:Name="RetryBackoffSlider"
                    Minimum="100"
                    Maximum="5000"
                    ValueChanged="OnConfigChanged" />
                <Label Text="✅ Covered by: E) Request shaping"
                   FontSize="12" />
            </VerticalStackLayout>
            </Border>

            <Border x:Name="CardRateLimits"
                StrokeShape="RoundRectangle 14"
                Padding="12"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
            <VerticalStackLayout Spacing="8">
                <Label Text="Rate Limits"
                   FontSize="18"
                   FontAttributes="Bold" />
                     <Label Text="Control per-minute request and token throughput." />
                <Label x:Name="RequestsPerMinuteLabel" />
                <Slider x:Name="RequestsPerMinuteSlider"
                    Minimum="10"
                    Maximum="1000"
                    ValueChanged="OnConfigChanged" />
                <Label x:Name="TokensPerMinuteLabel" />
                <Slider x:Name="TokensPerMinuteSlider"
                    Minimum="1000"
                    Maximum="500000"
                    ValueChanged="OnConfigChanged" />
                <Label x:Name="BurstAllowanceLabel" />
                <Slider x:Name="BurstAllowanceSlider"
                    Minimum="1"
                    Maximum="100"
                    ValueChanged="OnConfigChanged" />
                <Label Text="✅ Covered by: F) Rate limiting"
                   FontSize="12" />
            </VerticalStackLayout>
            </Border>

            <Border x:Name="CardPresets"
                StrokeShape="RoundRectangle 14"
                Padding="12"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
            <VerticalStackLayout Spacing="8">
                <Label Text="Presets"
                   FontSize="18"
                   FontAttributes="Bold" />
                     <Label Text="Apply and persist practical local operating profiles." />
                <HorizontalStackLayout Spacing="8">
                <Button Text="Quiet (Laptop)"
                    Clicked="OnQuietPresetClicked" />
                <Button Text="Balanced"
                    Clicked="OnBalancedPresetClicked" />
                <Button Text="Performance"
                    Clicked="OnPerformancePresetClicked" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="8">
                <Button Text="Save Custom"
                    Clicked="OnSaveCustomPresetClicked" />
                <Button Text="Load Custom"
                    Clicked="OnLoadCustomPresetClicked" />
                </HorizontalStackLayout>
                <Label x:Name="PresetStatusLabel" />
                    <Label x:Name="PresetDiffLabel"
                       FontFamily="OpenSansSemibold"
                       FontSize="12" />
                <Label Text="✅ Covered by: G) Presets"
                   FontSize="12" />
            </VerticalStackLayout>
            </Border>

                <Border x:Name="CardProfiles"
                StrokeShape="RoundRectangle 14"
                Padding="12"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
                <VerticalStackLayout Spacing="8">
                <Label Text="Profiles"
                   FontSize="18"
                   FontAttributes="Bold" />
                <Label Text="Assign per-app presets and per-app throughput overrides." />
                <HorizontalStackLayout Spacing="8">
                    <Label Text="Recent app" VerticalOptions="Center" />
                    <Picker x:Name="RecentAppsPicker"
                        WidthRequest="320"
                        SelectedIndexChanged="OnRecentAppChanged" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="8">
                    <Button Text="App Quiet"
                        Clicked="OnProfileQuietClicked" />
                    <Button Text="App Balanced"
                        Clicked="OnProfileBalancedClicked" />
                    <Button Text="App Performance"
                        Clicked="OnProfilePerformanceClicked" />
                </HorizontalStackLayout>

                <Label x:Name="ProfileMaxConcurrencyLabel" />
                <Slider x:Name="ProfileMaxConcurrencySlider"
                    Minimum="1"
                    Maximum="32"
                    ValueChanged="OnProfileOverrideChanged" />
                <Label x:Name="ProfileBackgroundCapLabel" />
                <Slider x:Name="ProfileBackgroundCapSlider"
                    Minimum="0"
                    Maximum="32"
                    ValueChanged="OnProfileOverrideChanged" />
                <Label x:Name="ProfileMaxOutputLabel" />
                <Slider x:Name="ProfileMaxOutputSlider"
                    Minimum="64"
                    Maximum="4096"
                    ValueChanged="OnProfileOverrideChanged" />
                <Label x:Name="ProfileMaxPromptLabel" />
                <Slider x:Name="ProfileMaxPromptSlider"
                    Minimum="256"
                    Maximum="32000"
                    ValueChanged="OnProfileOverrideChanged" />
                <Label x:Name="ProfileRequestsPerMinuteLabel" />
                <Slider x:Name="ProfileRequestsPerMinuteSlider"
                    Minimum="10"
                    Maximum="1000"
                    ValueChanged="OnProfileOverrideChanged" />
                <Label x:Name="ProfileTokensPerMinuteLabel" />
                <Slider x:Name="ProfileTokensPerMinuteSlider"
                    Minimum="1000"
                    Maximum="500000"
                    ValueChanged="OnProfileOverrideChanged" />

                <Button Text="Apply App Override"
                    Clicked="OnApplyAppProfileClicked" />
                <Label x:Name="ProfilesStatusLabel" />
                <Label Text="✅ Covered by: H) Per-app profiles"
                       FontSize="12" />
                </VerticalStackLayout>
                </Border>

            <Border x:Name="CardDiagnostics"
                StrokeShape="RoundRectangle 14"
                Padding="12"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
            <VerticalStackLayout Spacing="8">
                <Label Text="Diagnostics"
                   FontSize="18"
                   FontAttributes="Bold" />
                     <Label Text="Export runtime snapshots and inspect recent event evidence." />
                <HorizontalStackLayout Spacing="8">
                <Button Text="Export Diagnostics"
                    Clicked="OnExportDiagnosticsClicked" />
                <Button Text="Copy Status Summary"
                    Clicked="OnCopySummaryClicked" />
                    <Button x:Name="PauseEventsButton"
                        Text="Pause"
                        Clicked="OnPauseEventsClicked" />
                    <Button Text="Copy last 50"
                        Clicked="OnCopyLast50Clicked" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="8">
                    <Label Text="Include file paths in support bundle"
                           VerticalOptions="Center" />
                    <Switch x:Name="IncludePathsSwitch" />
                </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="12">
                    <HorizontalStackLayout Spacing="4">
                        <Switch x:Name="FilterLeaseSwitch"
                            IsToggled="True"
                            Toggled="OnEventFilterToggled" />
                        <Label Text="Leases" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="4">
                        <Switch x:Name="FilterPressureSwitch"
                            IsToggled="True"
                            Toggled="OnEventFilterToggled" />
                        <Label Text="Pressure" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="4">
                        <Switch x:Name="FilterConfigSwitch"
                            IsToggled="True"
                            Toggled="OnEventFilterToggled" />
                        <Label Text="Config" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    </HorizontalStackLayout>
                <Label x:Name="DiagnosticsPathLabel" />
                <Button x:Name="ToggleTechnicalDetailsButton"
                        Text="Show technical details"
                        Clicked="OnToggleTechnicalDetailsClicked" />
                <VerticalStackLayout x:Name="TechnicalDetailsPanel"
                                     IsVisible="False"
                                     Spacing="8">
                    <Label Text="Event Tail (Live)" FontAttributes="Bold" />
                    <Editor x:Name="EventsEditor"
                        HeightRequest="190"
                        IsReadOnly="True"
                        FontFamily="Courier New" />
                </VerticalStackLayout>
                <Label Text="✅ Covered by: H) Diagnostics + audit-lite"
                   FontSize="12" />
            </VerticalStackLayout>
            </Border>

                    <Border x:Name="CardAudit"
                            StrokeShape="RoundRectangle 14"
                            Padding="12"
                            BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Audit Harness"
                                   FontSize="18"
                                   FontAttributes="Bold" />
                            <Label Text="Run scripted verification against daemon endpoints and event evidence." />
                            <Button Text="Run Audit Harness"
                                    Clicked="OnRunAuditHarnessClicked" />
                            <Editor x:Name="AuditResultsEditor"
                                    HeightRequest="220"
                                    IsReadOnly="True"
                                    FontFamily="OpenSansSemibold" />
                            <Label Text="✅ Covered by: Phase 2 checklist-backed verification"
                                   FontSize="12" />
                        </VerticalStackLayout>
                    </Border>
        </VerticalStackLayout>
        </ScrollView>
    </Grid>
    <Border x:Name="ApplyToast"
            Grid.RowSpan="4"
            IsVisible="False"
            HorizontalOptions="End"
            VerticalOptions="End"
            Padding="10,6"
            StrokeShape="RoundRectangle 10"
            Margin="0,0,4,4"
            BackgroundColor="{AppThemeBinding Light=#EEF7EE, Dark=#213221}">
        <Label Text="Settings applied"
               FontSize="12"
               FontAttributes="Bold" />
    </Border>
    </Grid>

</ContentPage>
